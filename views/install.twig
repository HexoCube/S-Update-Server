{% extends 'templates/base.twig' %}

{% block title %}Install{% endblock %}

{% block head %}
    <!-- Install CSS -->
    <link href="{{ res("css/install.css") }}" rel="stylesheet"/>
{% endblock %}

{% block content %}
    <style>
        html, body
        {
            background-image: url({{ res("images/background.png") }});
        }
    </style>

    <div id="content">
        <div id="step-1">
            <h1>Welcome</h1>
            <p class="size-25">
                Click 'Next >' to start
            </p>
        </div>
    </div>

    <div id="steps">
        <button id="previous">< Previous</button>
        <span id="step">1 / 5</span>
        <button class="right">Next ></button>
    </div>
{% endblock %}

{% block scripts %}
    <!-- The FieldChecker JS -->
    <script src="{{ res('js/fieldChecker.js') }}"></script>
{% endblock %}
