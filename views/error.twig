 # Panel error page
 #
 # v3-(Panel-1.2.0-BETA)
 #}

{% extends 'templates/base.twig' %}

{% block title %}Error{% endblock %}

{% block head %}
    <!-- Error page CSS -->
    <link href="{{ res("css/error.css") }}" rel="stylesheet"/>
{% endblock %}

{% block content %}
    <style>
        body
        {
            background-image: url({{ res("images/background.png") }});
        }
    </style>
    <div class='fulldiv'>
        <div class="center">
            <img src="{{ res('images/logo.png') }}"/>

            <br/>
            <br/>
            <br/>

            <h1 class="size-85">{{ title }}</h1>

            <br/>

            <p class="size-25">
                {{ message }}

                <br/>
                <br/>
                <br/>

                <button id="home" onclick="window.location.href = '{{ app.request.basepath }}'">Home</button>
                <button id="prev-page" onclick="history.go(-1);">Previous Page</button>
            </p>
        </div>
    </div>
{% endblock %}
